{
  "name": "my-ext",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "env-cmd": "^10.1.0",
    "npm-watch": "^0.11.0",
    "react": "^17.0.2",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-scripts": "4.0.3",
    "redux": "^4.1.2",
    "reduxed-chrome-storage": "^2.4.7",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.4"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "scripts": {
    "watch": "env-cmd -f .env npm-watch",
    "start": "env-cmd -f .env react-scripts start",
    "build": "env-cmd -f .env react-app-rewired build",
    "test": "env-cmd -f .env react-app-rewired test",
    "eject": "env-cmd -f .env react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
